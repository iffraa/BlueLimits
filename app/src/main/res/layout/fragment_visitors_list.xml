<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="com.app.bluelimits.view.fragment.VisitorsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingTop="@dimen/_50sdp"
    android:paddingLeft="@dimen/_15sdp"
    android:paddingRight="@dimen/_15sdp">


    <include
        android:id="@+id/progressBar"
        layout="@layout/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"></include>



    <LinearLayout
        android:id="@+id/ll_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jura_demi_bold"
            android:text="Total Invitee:"
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/_14ssp"></TextView>

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/jura_demi_bold"
            android:text=""
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/_14ssp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jura_demi_bold"
            android:text="Today Invitee:"
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/_14ssp"></TextView>

        <TextView
            android:id="@+id/tv_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/jura_demi_bold"
            android:text=""
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/_14ssp"></TextView>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_visitors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_total"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp">

    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>