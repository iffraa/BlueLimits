<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    tools:context=".view.fragment.UnitFormFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="140dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/oia_logo" />

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/grey_text" />

        <TextView
            android:id="@+id/tv_form_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/jura_semi_bold"
            android:text="@string/oia_form_text"
            android:textColor="@color/grey_text"
            android:textSize="16sp"></TextView>

        <TextView
            android:id="@+id/tv_membership"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/jura_semi_bold"
            android:text="@string/annual_mem"
            android:textColor="@color/grey_text"
            android:textSize="16sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/jura_demi_bold"
                android:text="@string/select_role"
                android:textColor="@color/grey_text"
                android:textSize="16sp"></TextView>

            <include
                android:id="@+id/progressBar"
                layout="@layout/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"></include>

            <EditText
                android:id="@+id/tv_service"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle"
                android:editable="false"
                android:fontFamily="@font/jura_demi_bold"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"></EditText>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/jura_demi_bold"
                android:text="@string/select_service"
                android:textColor="@color/grey_text"
                android:textSize="16sp"></TextView>

            <Spinner
                android:id="@+id/sp_service"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle"
                android:fontFamily="@font/jura_demi_bold"
                android:inputType="text"
                android:lines="1"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"></Spinner>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_pckgs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:visibility="gone"></androidx.recyclerview.widget.RecyclerView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/jura_demi_bold"
                android:text="@string/title"
                android:textColor="@color/grey_text"
                android:textSize="16sp"></TextView>

            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle"
                android:fontFamily="@font/jura_demi_bold"
                android:inputType="text"
                android:lines="1"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/jura_demi_bold"
                android:text="@string/first_name"
                android:textColor="@color/grey_text"
                android:textSize="16sp"></TextView>

            <EditText
                android:id="@+id/et_fname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle"
                android:fontFamily="@font/jura_demi_bold"
                android:inputType="text"
                android:lines="1"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/jura_demi_bold"
                android:text="@string/last_name"
                android:textColor="@color/grey_text"
                android:textSize="16sp"></TextView>

            <EditText
                android:id="@+id/et_lname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle"
                android:fontFamily="@font/jura_demi_bold"
                android:inputType="text"
                android:lines="1"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/jura_demi_bold"
                android:text="@string/profession"
                android:textColor="@color/grey_text"
                android:textSize="16sp"></TextView>

            <EditText
                android:id="@+id/et_profession"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle"
                android:fontFamily="@font/jura_demi_bold"
                android:inputType="text"
                android:lines="1"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/jura_demi_bold"
                android:text="@string/id_no"
                android:textColor="@color/grey_text"
                android:textSize="16sp"></TextView>

            <EditText
                android:id="@+id/et_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle"
                android:fontFamily="@font/jura_demi_bold"
                android:inputType="text"
                android:lines="1"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/jura_demi_bold"
                android:text="@string/dob"
                android:textColor="@color/grey_text"
                android:textSize="16sp"></TextView>

            <EditText
                android:id="@+id/et_dob"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/jura_demi_bold"
                android:lines="1"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/jura_demi_bold"
                android:text="@string/gender"
                android:textColor="@color/grey_text"
                android:textSize="16sp"></TextView>

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/grey_text"
                    android:fontFamily="@font/jura_demi_bold"
                    android:text="@string/male"
                    android:textColor="@color/grey_text" />

                <CheckBox
                    android:id="@+id/cb_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:buttonTint="@color/grey_text"
                    android:fontFamily="@font/jura_demi_bold"
                    android:text="@string/female"
                    android:textColor="@color/grey_text" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/jura_demi_bold"
                android:text="@string/mobile"
                android:textColor="@color/grey_text"
                android:textSize="16sp"></TextView>

            <include
                android:id="@+id/layout_mobile"
                layout="@layout/layout_contact_number"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"></include>
            <!--      <EditText
                      android:id="@+id/et_mobile"
                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:layout_marginTop="10dp"
                      android:background="@drawable/rectangle"
                      android:fontFamily="@font/jura_demi_bold"
                      android:inputType="text"
                      android:lines="1"
                      android:paddingLeft="10dp"
                      android:textColor="@android:color/black"></EditText>-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/jura_demi_bold"
                android:text="@string/email"
                android:textColor="@color/grey_text"
                android:textSize="16sp"></TextView>

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle"
                android:fontFamily="@font/jura_demi_bold"
                android:inputType="text"
                android:lines="1"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/jura_demi_bold"
                android:text="@string/home_country"
                android:textColor="@color/grey_text"
                android:textSize="16sp"></TextView>

            <com.hbb20.CountryCodePicker
                android:id="@+id/ccp_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle"
                android:paddingStart="10dp"
                android:textColor="@android:color/black"
                app:ccp_defaultNameCode="SA"
                app:ccp_showFullName="true"
                app:ccp_showNameCode="false"
                app:ccp_showPhoneCode="false"
                app:ccp_textGravity="LEFT"
                app:ccp_textSize="16sp" />

            <RelativeLayout
                android:id="@+id/rl_pb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:visibility="gone">

                <include
                    layout="@layout/progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"></include>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/jura_demi_bold"
                android:text="@string/home_city"
                android:textColor="@color/grey_text"
                android:textSize="16sp"></TextView>

            <EditText
                android:id="@+id/et_hCity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle"
                android:fontFamily="@font/jura_demi_bold"
                android:inputType="text"
                android:lines="1"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/jura_demi_bold"
                android:text="@string/offc_country"
                android:textColor="@color/grey_text"
                android:textSize="16sp"></TextView>

            <com.hbb20.CountryCodePicker
                android:id="@+id/ccp_office"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle"
                android:paddingStart="10dp"
                android:textColor="@android:color/black"
                app:ccp_defaultNameCode="SA"
                app:ccp_showFullName="true"
                app:ccp_showNameCode="false"
                app:ccp_showPhoneCode="false"
                app:ccp_textGravity="LEFT"
                app:ccp_textSize="16sp" />


            <!--   <EditText
                   android:id="@+id/et_offCountry"
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:layout_marginTop="10dp"
                   android:background="@drawable/rectangle"
                   android:fontFamily="@font/jura_demi_bold"
                   android:inputType="text"
                   android:lines="1"
                   android:paddingLeft="10dp"
                   android:textColor="@android:color/black"></EditText> -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/jura_demi_bold"
                android:text="@string/offc_city"
                android:textColor="@color/grey_text"
                android:textSize="16sp"></TextView>

            <EditText
                android:id="@+id/et_offCity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle"
                android:fontFamily="@font/jura_demi_bold"
                android:inputType="text"
                android:lines="1"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"></EditText>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/jura_demi_bold"
                    android:text="@string/profile_img"
                    android:textColor="@color/grey_text"
                    android:textSize="16sp"></TextView>

                <TextView
                    android:id="@+id/tv_browse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/jura_demi_bold"
                    android:text="@string/browse"
                    android:textColor="@color/grey"
                    android:textSize="16sp"></TextView>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/jura_demi_bold"
                android:text="@string/no_of_fam_membs"
                android:textColor="@color/grey_text"
                android:textSize="16sp"></TextView>

            <EditText
                android:id="@+id/et_family"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle"
                android:fontFamily="@font/jura_demi_bold"
                android:inputType="number"
                android:lines="1"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"></EditText>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_family"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:visibility="gone"></androidx.recyclerview.widget.RecyclerView>


            <Button
                android:id="@+id/btn_apply"
                android:layout_width="240dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn_bg"
                android:text="@string/apply"
                android:textColor="@color/white">

            </Button>


        </LinearLayout>


    </LinearLayout>

</ScrollView>