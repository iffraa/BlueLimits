                    <LinearLayout
                        android:id="@+id/ll_price3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_strts2"
                        android:layout_marginLeft="@dimen/_5ssp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_10ssp">

                        <TextView
                            android:id="@+id/tv_price3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/jura_demi_bold"
                            android:text="000"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_15sdp"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/jura_demi_bold"
                            android:text="SR"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_8sdp"></TextView>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_per_night3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_price2"
                        android:layout_marginLeft="@dimen/_5ssp"
                        android:fontFamily="@font/jura_demi_bold"
                        android:text="per night"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_7sdp"></TextView>

                    <Button
                        android:id="@+id/btn_loft3"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_below="@id/tv_per_night2"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/detailsbtn"
                        android:text="View Details"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_5sdp"></Button>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>