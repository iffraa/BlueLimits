<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_10sdp"
    android:fillViewport="true"
    android:layout_marginTop="@dimen/_30sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.ResortInfoFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:src="@drawable/oia_logo" />


        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_arrows"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:fontFamily="@font/jura_semi_bold"
            android:text="@string/oia_info"
            android:textColor="@color/light_black"
            android:textSize="@dimen/_12ssp"></TextView>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:layout_below="@+id/iv_logo"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="-50dp"></androidx.viewpager.widget.ViewPager>

        <LinearLayout
            android:id="@+id/ll_arrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewPager"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_below="@+id/viewPager"
                android:src="@drawable/slider_arrow_left"></ImageView>

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_below="@+id/viewPager"
                android:layout_marginLeft="@dimen/_40sdp"
                android:src="@drawable/slider_arrow_right"></ImageView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_marine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_arrows"
            android:layout_marginTop="@dimen/_30sdp"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bullet"
                    android:layout_marginTop="@dimen/_5sdp"
                    ></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_black"
                    android:text="@string/marine_info1"
                    android:fontFamily="@font/jura_semi_bold"
                    android:layout_marginLeft="@dimen/_5sdp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bullet"
                    android:layout_marginTop="@dimen/_2sdp"
                    ></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_black"
                    android:text="@string/marine_info2"
                    android:fontFamily="@font/jura_semi_bold"
                    android:layout_marginLeft="@dimen/_5sdp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bullet"
                    android:layout_marginTop="@dimen/_2sdp"
                    ></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_black"
                    android:text="@string/marine_info3"
                    android:fontFamily="@font/jura_semi_bold"
                    android:layout_marginLeft="@dimen/_5sdp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_10sdp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bullet"
                    android:layout_marginTop="@dimen/_2sdp"
                    ></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_black"
                    android:text="@string/marine_info4"
                    android:fontFamily="@font/jura_semi_bold"
                    android:layout_marginLeft="@dimen/_5sdp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_10sdp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bullet"
                    android:layout_marginTop="@dimen/_2sdp"
                    ></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_black"
                    android:text="@string/marine_info5"
                    android:fontFamily="@font/jura_semi_bold"
                    android:layout_marginLeft="@dimen/_5sdp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_10sdp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bullet"
                    android:layout_marginTop="@dimen/_2sdp"
                    ></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_black"
                    android:text="@string/marine_info6"
                    android:fontFamily="@font/jura_semi_bold"
                    android:layout_marginLeft="@dimen/_5sdp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_10sdp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bullet"
                    android:layout_marginTop="@dimen/_2sdp"
                    ></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_black"
                    android:text="@string/marine_info7"
                    android:fontFamily="@font/jura_semi_bold"
                    android:layout_marginLeft="@dimen/_5sdp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_10sdp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bullet"
                    android:layout_marginTop="@dimen/_2sdp"
                    ></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_black"
                    android:text="@string/marine_info8"
                    android:fontFamily="@font/jura_semi_bold"
                    android:layout_marginLeft="@dimen/_5sdp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_10sdp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bullet"
                    android:layout_marginTop="@dimen/_2sdp"
                    ></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_black"
                    android:text="@string/marine_info9"
                    android:fontFamily="@font/jura_semi_bold"
                    android:layout_marginLeft="@dimen/_5sdp"></TextView>
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/iv_right_arrow"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@+id/tv_info"
            android:layout_alignRight="@+id/tv_info"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_40sdp"
            android:src="@drawable/right_arrow" />


        <ImageView
            android:id="@+id/iv_left_arrow"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@+id/tv_info"
            android:layout_alignLeft="@+id/tv_info"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:src="@drawable/left_arrow" />



        <Button
            android:id="@+id/rl_trip"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/ll_marine"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textStyle="bold"
            android:background="@drawable/btn_grey"
            android:visibility="gone"
            android:textSize="@dimen/_13ssp"
            android:text="@string/req_trip"
            android:textAllCaps="false"
            android:fontFamily="@font/jura_demi_bold"
            android:textColor="@color/white"></Button>


    </RelativeLayout>
</ScrollView>