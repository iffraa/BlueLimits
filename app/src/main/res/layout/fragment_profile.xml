<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.fragment.ProfileFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/_18sdp">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_outline"
            android:scaleType="fitXY"
            android:src="@drawable/profile_img" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/jura_demi_bold"
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/_18ssp"></TextView>

        <TextView
            android:id="@+id/tv_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/jura_demi_bold"
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/_14ssp"></TextView>

        <Button
            android:id="@+id/btn_info"
            android:layout_width="@dimen/_320sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/tv_role"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/jura_demi_bold"
            android:text="@string/personal_info"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"></Button>

        <RelativeLayout
            android:id="@+id/ll_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_info"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/rectangle"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:src="@drawable/id"></ImageView>

                    <TextView
                        android:id="@+id/tv_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/jura_demi_bold"
                        android:text="@string/id_no"
                        android:textColor="@color/navy_blue"
                        android:textSize="@dimen/_10ssp"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:background="@drawable/rectangle"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:src="@drawable/mobile"></ImageView>

                    <TextView
                        android:id="@+id/tv_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/jura_demi_bold"
                        android:text="@string/mobile"
                        android:textColor="@color/navy_blue"
                        android:textSize="@dimen/_10sdp"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:background="@drawable/rectangle"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:src="@drawable/email"></ImageView>

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/jura_demi_bold"
                        android:text="@string/email"
                        android:textColor="@color/navy_blue"
                        android:textSize="@dimen/_10ssp"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_unit"
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:background="@drawable/rectangle"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/unit"></ImageView>

                    <TextView
                        android:id="@+id/tv_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/jura_demi_bold"
                        android:text="@string/unit"
                        android:textColor="@color/navy_blue"
                        android:textSize="@dimen/_10ssp"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_extra"
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:background="@drawable/rectangle"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/family"></ImageView>

                    <TextView
                        android:id="@+id/tv_family"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/jura_demi_bold"
                        android:text="@string/total_mems"
                        android:textColor="@color/navy_blue"
                        android:textSize="@dimen/_10sdp"></TextView>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_family"
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:background="@drawable/rectangle"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/family"></ImageView>

                    <TextView
                        android:id="@+id/tv_extra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/jura_demi_bold"
                        android:text="@string/extra_mems"
                        android:textColor="@color/navy_blue"
                        android:textSize="@dimen/_10sdp"></TextView>

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_barcode"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

            </ImageView>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_family"
            android:layout_width="@dimen/_320sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/ll_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/jura_demi_bold"
            android:text="@string/fam_members"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:visibility="gone"></Button>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_fam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_family"
            android:layout_marginBottom="@dimen/_15sdp"
            android:visibility="gone"></androidx.recyclerview.widget.RecyclerView>


        <Button
            android:id="@+id/btn_extra_family"
            android:layout_width="@dimen/_320sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/rv_fam"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/jura_demi_bold"
            android:text="@string/fam_extra_members"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:visibility="gone"></Button>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_extra_fam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_extra_family"
            android:layout_marginBottom="@dimen/_15sdp"
            android:visibility="gone"></androidx.recyclerview.widget.RecyclerView>

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progressbar"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_130sdp"
            android:layout_centerInParent="true"
            android:layout_marginTop="-7dp"
            android:animationResolution="@android:integer/config_mediumAnimTime"
            android:backgroundTint="@color/navy_blue"
            android:indeterminate="true"
            android:indeterminateTint="@color/navy_blue"
            android:max="100"
            android:visibility="gone"
            app:indicatorColor="@color/navy_blue" />


    </RelativeLayout>

</ScrollView>