<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    tools:context=".view.fragment.ResortInfoFragment">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_transparent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_logo">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_oia"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/iv_logo"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/boho_slide1" />

            <TextView
                android:id="@+id/tv_oia_beach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_oia"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/jura_demi_bold"
                android:text="@string/oia_beach"
                android:textColor="@color/grey_text"
                android:textSize="18sp"></TextView>

            <TextView
                android:id="@+id/tv_oia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_oia_beach"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/jura_semi_bold"
                android:text="@string/oia_info"
                android:textColor="@color/light_black"></TextView>

            <ImageView
                android:id="@+id/iv_boho"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/tv_oia"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/boho_slide2" />


            <TextView
                android:id="@+id/tv_boho_beach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_boho"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/jura_demi_bold"
                android:text="@string/boho_beach"
                android:textColor="@color/grey_text"
                android:textSize="18sp"></TextView>

            <TextView
                android:id="@+id/tv_boho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_boho_beach"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/jura_semi_bold"
                android:text="@string/boho_info"
                android:textColor="@color/light_black"></TextView>

            <ImageView
                android:id="@+id/iv_marine"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/tv_boho"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/boho_slide3" />


            <TextView
                android:id="@+id/tv_marine_serv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_marine"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/jura_demi_bold"
                android:text="@string/marine_services"
                android:textColor="@color/grey_text"
                android:textSize="18sp"></TextView>


            <LinearLayout
                android:id="@+id/ll_marine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_marine_serv"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/bullet"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/jura_semi_bold"
                        android:text="@string/marine_info1"
                        android:textColor="@color/light_black"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
