                    android:layout_marginLeft="@dimen/_10ssp"
                    android:fontFamily="@font/jura_demi_bold"
                    android:text="Accomodation for 2"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_8sdp"></TextView>

                <TextView
                    android:id="@+id/tv_description3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_accom3"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:fontFamily="@font/jura_demi_bold"
                    android:text="1 Bedroom Apartment"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_7sdp"></TextView>


                <LinearLayout
                    android:id="@+id/ll3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv3"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10ssp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_strts3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jura_demi_bold"
