<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/_50sdp"
    android:paddingLeft="@dimen/_15sdp"
    android:paddingRight="@dimen/_15sdp">

    <TextView
        android:id="@+id/tv_no_of_visitors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_15sdp"
        android:fontFamily="@font/jura_demi_bold"
        android:text="@string/no_of_visitors"
        android:textColor="@color/navy_blue"
        android:textSize="@dimen/_13ssp" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:fontFamily="@font/jura_demi_bold"
        android:text="@string/date_time"
        android:textColor="@color/navy_blue"
        android:textSize="@dimen/_13ssp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:fontFamily="@font/jura_semi_bold"
        android:text="Visitor List:"
        android:textStyle="bold"
        android:textColor="@color/navy_blue"
        android:textSize="@dimen/_16ssp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_visitors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_total"
        android:layout_centerHorizontal="true">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>