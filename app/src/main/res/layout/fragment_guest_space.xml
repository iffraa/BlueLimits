<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_oia"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="@dimen/_15sdp"
            android:src="@drawable/oia_logo"></ImageView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_loft"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="@dimen/_180sdp"
            android:layout_marginTop="@dimen/_15sdp"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="@dimen/_24sdp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_95sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/loftspace"></ImageView>

                <TextView
                    android:id="@+id/tv_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/jura_demi_bold"
                    android:text="LOFT SPACE"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_15sdp"></TextView>

                <TextView
                    android:id="@+id/tv_accom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_space"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:fontFamily="@font/jura_demi_bold"
                    android:text="Accomodation for 4"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_8sdp"></TextView>

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_accom"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:fontFamily="@font/jura_demi_bold"
                    android:text="Villa with private pool"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_7sdp"></TextView>


                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10ssp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_strts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jura_demi_bold"
                        android:text="Starts From"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="@dimen/_5ssp"
                        android:textSize="@dimen/_8sdp"></TextView>

                    <LinearLayout
                        android:id="@+id/ll_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_strts"
                        android:layout_marginLeft="@dimen/_5ssp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_10ssp">

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/jura_demi_bold"
                            android:text="000"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_15sdp"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/jura_demi_bold"
                            android:text="SR"
                            android:textColor="@android:color/black"
                            android:gravity="top"
                            android:textSize="@dimen/_8sdp"></TextView>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_per_night"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_price"
                        android:layout_marginLeft="@dimen/_5ssp"
                        android:fontFamily="@font/jura_demi_bold"
                        android:text="per night"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_7sdp"></TextView>

                    <Button
                        android:id="@+id/btn_loft"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_below="@id/tv_per_night"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/detailsbtn"
                        android:text="View Details"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_5sdp"></Button>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_villa"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="@dimen/_180sdp"
