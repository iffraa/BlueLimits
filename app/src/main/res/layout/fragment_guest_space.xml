                        android:layout_below="@id/tv_strts2"
                        android:layout_marginLeft="@dimen/_5ssp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_10ssp">

                        <TextView
                            android:id="@+id/tv_price2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/jura_demi_bold"
                            android:text="000"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_15sdp"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/jura_demi_bold"
                            android:text="SR"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_8sdp"></TextView>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_per_night2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_price2"
                        android:layout_marginLeft="@dimen/_5ssp"
                        android:fontFamily="@font/jura_demi_bold"
                        android:text="per night"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_7sdp"></TextView>

                    <Button
                        android:id="@+id/btn_loft2"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_below="@id/tv_per_night2"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/detailsbtn"
                        android:text="View Details"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_5sdp"></Button>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_suite"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="@dimen/_180sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="@dimen/_24sdp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_95sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/villaspace"></ImageView>

                <TextView
                    android:id="@+id/tv_space3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv3"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/jura_demi_bold"
                    android:text="SUITE SPACE"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_15sdp"></TextView>

                <TextView
                    android:id="@+id/tv_accom3"
                    android:layout_width="wrap_content"
